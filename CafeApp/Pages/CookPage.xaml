<Page x:Class="CafeApp.Pages.CookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CafeApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница повара">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="BtnOrderCatalog" Click="BtnOrderCatalog_Click" Style="{StaticResource Button}">Список заказов</Button>
            <Button Name="BtnChangeOrderStatus" Click="BtnChangeOrderStatus_Click" Style="{StaticResource Button}">Изменение статуса заказа</Button>
        </StackPanel>
        <Button Name="BtnExit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnExit_Click" Style="{StaticResource Button}">Выход</Button>
    </Grid>
</Page>
