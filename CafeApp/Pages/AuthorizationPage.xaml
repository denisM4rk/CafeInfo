<Page x:Class="CafeApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CafeApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница авторизации">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource AuthorizationTextBlock}">Логин:</TextBlock>
                <TextBox Name="TxbLogin" Style="{StaticResource AuthorizationBox}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource AuthorizationTextBlock}">Пароль:</TextBlock>
                <PasswordBox Name="PsbPassword" Style="{StaticResource PasswordBox}"></PasswordBox>
            </StackPanel>
            <Button Name="BtnAuthorization" Click="BtnAuthorization_Click" Width="350" Style="{StaticResource Button}">Авторизация</Button>
        </StackPanel>
    </Grid>
</Page>
