<Page x:Class="CafeApp.Pages.WorkingShiftPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CafeApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список смен">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <DataGrid Name="WorkingShiftGrid" Width="450" Height="220" Margin="10"></DataGrid>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Button Name="BtnAddTurn" Click="BtnAddTurn_Click" Style="{StaticResource Button}">Добавить смену</Button>
                <Button Name="BtnBack" Click="BtnBack_Click" Style="{StaticResource Button}">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
